<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <title>Document</title>
</head>
<body>
    <div class="ajaxbg">
        <div class="ajaxinner">
            <h3>You are now being redirected to paypal...</h3>
            <img src="/images/ajax-loader.gif" alt="" />
        </div>
    </div>

    <!-- =========================================================================== -->
    <!--    ** Navbar
    <!-- =========================================================================== -->
    <nav class="nav navbar-inverse">
        <div class="container">


            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">CmsShoppingCart</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                <% pages.forEach(function(page) { %>
                <% if (page.slug === "home" ) {%>
                <li><a href="/"><%= page.title %></a></li>
                <% } else { %>
                <li><a href="/<%= page.slug %>"><%= page.title %></a></li>
                <% } %>
                <% });%>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                <li>
                <a href="/cart/checkout">My Cart (
                <% if (typeof cart !== "undefined") {%>
                <%= cart.length %>
                <% } else { %>
                0
                <% }%>
                </a>
                </li>

                <% if (user) { %>
                <li><a href="/users/logout">Hi, <%= user.username %> ( logout )</a></li>
                <% } else { %>
                <li><a href="/users/register">Register</a></li>
                <li><a href="/users/login">Log in</a></li>
                <% } %>
                <% if (user && user.admin == 1) { %>
                <li><a href="/admin/pages">Admin Area</a></li>
                <% } %>
                </ul>

            </div> <!-- END nav-collapse -->

        </div>
    </nav>
    <!-- =========================================================================== -->
    <!--    ** END Navbar
    <!-- =========================================================================== -->
    <div class="container">